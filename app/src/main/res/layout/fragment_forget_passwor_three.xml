<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.qmuiteam.qmui.widget.QMUIEmptyView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:background="@color/qmui_config_color_white"
        android:fitsSystemWindows="true"
        android:visibility="gone"
        app:qmui_detail_text="正在加载"
        app:qmui_show_loading="true" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:background="?attr/qmui_config_color_background"
        android:fitsSystemWindows="true">

        <com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout
            android:id="@+id/pull_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/qmui_config_color_white"
                    android:orientation="vertical">

                    <!-- text instruction -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:orientation="horizontal">
                        <!-- input phonenumber -->
                        <TextView
                            style="@style/QDCommonDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1 绑定手机号" />

                        <!-- input verificationcode -->
                        <TextView
                            style="@style/QDCommonDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="2 输入验证码" />

                        <!-- confirm update -->
                        <TextView
                            style="@style/QDCommonDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="3 确认办理" />
                    </LinearLayout>

                    <!-- line instruction -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- line -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/px_1"
                            android:layout_weight="1"
                            android:background="@color/app_color_blue" />

                        <!-- point -->
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/ic_point_blue" />

                        <!-- line -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/px_1"
                            android:layout_weight="2"
                            android:background="@color/app_color_blue" />

                        <!-- point -->
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/ic_point_blue" />

                        <!-- line -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/px_1"
                            android:layout_weight="2"
                            android:background="@color/app_color_blue" />

                        <!-- point -->
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/ic_point_blue" />

                        <!-- line -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/px_1"
                            android:layout_weight="1"
                            android:background="@color/qmui_config_color_gray_7" />

                    </LinearLayout>

                    <!-- 常用信息 -->
                    <com.qmuiteam.qmui.widget.grouplist.QMUIGroupListView
                        android:layout_marginTop="@dimen/dp_16"
                        android:id="@+id/groupListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- display the register button-->
                    <Button
                        android:id="@+id/confirm_modify_password"
                        style="@style/AppQDRadiusButton"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/space_left_right_button_minus_12"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/space_left_right_button_minus_12"
                        android:text="确认办理" />

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout>
    </FrameLayout>

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>