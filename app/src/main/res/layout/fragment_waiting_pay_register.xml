<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.qmuiteam.qmui.widget.QMUIEmptyView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:background="@color/qmui_config_color_white"
        android:fitsSystemWindows="true"
        android:visibility="gone"
        app:qmui_detail_text="正在加载"
        app:qmui_show_loading="true" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:background="?attr/qmui_config_color_background"
        android:fitsSystemWindows="true">

        <com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout
            android:id="@+id/pull_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!-- 医院信息 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/qmui_config_color_white"
                        android:orientation="vertical"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp">

                        <!-- 医院信息 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/hosipital_info_solid_imageview"
                                android:layout_width="@dimen/solid_image_common_width"
                                android:layout_height="@dimen/solid_image_common_height" />

                            <TextView
                                style="@style/QDCommonTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="12dp"
                                android:layout_marginBottom="0dp"
                                android:text="医院信息" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@drawable/qmui_divider_top_bitmap" />

                        <!-- hospital information -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <!--hospital trademark-->
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/activity_register_result_hospital_circleimageview"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/nav_header_desc"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bg_hospital_trademark"
                                app:civ_border_color="#00000000"
                                app:civ_border_width="2dp" />

                            <!-- hospital introduction -->
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="12dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/QDCommonTitle"
                                        android:layout_width="match_parent"
                                        android:layout_height="32dp"
                                        android:layout_marginBottom="0dp"
                                        android:gravity="left|center_vertical"
                                        android:text="石河子大学第一附属医院" />

                                    <TextView
                                        android:id="@+id/choose_medical_card_textview"
                                        style="@style/QDCommonDescription"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="0dp"
                                        android:gravity="start"
                                        android:text="地址：石河子市北二路107号"
                                        android:textColor="?attr/qmui_config_color_gray_1" />
                                </LinearLayout>
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 挂号单详情 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:background="@color/qmui_config_color_white"
                        android:orientation="vertical"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp">

                        <!-- 挂号单详情 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/register_detail_solid_imageview"
                                android:layout_width="@dimen/solid_image_common_width"
                                android:layout_height="@dimen/solid_image_common_height" />

                            <TextView
                                style="@style/QDCommonTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="12dp"
                                android:layout_marginBottom="0dp"
                                android:text="挂号单详情" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@drawable/qmui_divider_top_bitmap" />

                        <!-- 内容 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="就诊科室:" />

                                <!--就诊科室-->
                                <TextView
                                    android:id="@+id/department_textview"
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="就诊科室"
                                    android:textColor="?attr/qmui_config_color_gray_1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="医生姓名:" />

                                <!--就诊科室-->
                                <TextView
                                    android:id="@+id/doctor_name_textview"
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="医生姓名"
                                    android:textColor="?attr/qmui_config_color_gray_1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="就诊日期:" />

                                <TextView
                                    android:id="@+id/diagnosis_date_textview"
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="年-月-日"
                                    android:textColor="?attr/qmui_config_color_gray_1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="就诊时间:" />

                                <!--就诊科室-->
                                <TextView
                                    android:id="@+id/diagnosis_time_textview"
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="时分秒"
                                    android:textColor="?attr/qmui_config_color_gray_1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="就诊人:" />

                                <!--就诊科室-->
                                <TextView
                                    android:id="@+id/diagnosis_name_textview"
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="就诊人"
                                    android:textColor="?attr/qmui_config_color_gray_1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="就诊序号:" />

                                <!--就诊科室-->
                                <TextView
                                    android:id="@+id/diagnosis_no_textview"
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="就诊序号"
                                    android:textColor="?attr/qmui_config_color_gray_1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="诊疗室:" />

                                <!--就诊科室-->
                                <TextView
                                    android:id="@+id/diagnosis_room_textview"
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="诊疗室"
                                    android:textColor="?attr/qmui_config_color_gray_1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="预约挂号费:" />

                                <!--就诊科室-->
                                <TextView
                                    android:id="@+id/register_cost_textview"
                                    style="@style/QDCommonDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="0dp"
                                    android:gravity="start"
                                    android:text="费用"
                                    android:textColor="?attr/app_primary_color" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp" />
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/cancel_register_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消预约"
                android:alpha="255"
                app:qmui_backgroundColor="@color/app_color_blue_full"
                app:qmui_radiusBottomLeft="20dp"
                app:qmui_radiusTopLeft="20dp" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/pay_now_roundbutton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="立即支付"
                app:qmui_backgroundColor="@color/app_color_blue_full"
                app:qmui_radiusBottomRight="20dp"
                app:qmui_radiusTopRight="20dp" />
        </LinearLayout>
    </FrameLayout>

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>