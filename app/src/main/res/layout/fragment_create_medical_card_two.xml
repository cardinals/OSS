<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.qmuiteam.qmui.widget.QMUIEmptyView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:background="@color/qmui_config_color_white"
        android:fitsSystemWindows="true"
        android:visibility="gone"
        app:qmui_detail_text="正在加载"
        app:qmui_show_loading="true" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:background="?attr/qmui_config_color_background"
        android:fitsSystemWindows="true">

        <com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout
            android:id="@+id/pull_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/qmui_config_color_white"
                    android:orientation="vertical">

                    <!-- text instruction -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:orientation="horizontal">
                        <!-- input phonenumber -->
                        <TextView
                            style="@style/QDCommonDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1 输入手机号" />

                        <!-- input verificationcode -->
                        <TextView
                            style="@style/QDCommonDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="2 输入验证码" />

                        <!-- confirm update -->
                        <TextView
                            style="@style/QDCommonDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="3 确认修改" />

                    </LinearLayout>

                    <!-- line instruction -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- line -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/px_1"
                            android:layout_weight="1"
                            android:background="@color/app_color_blue" />

                        <!-- point -->
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/ic_point_blue" />

                        <!-- line -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/px_1"
                            android:layout_weight="2"
                            android:background="@color/app_color_blue" />

                        <!-- point -->
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/ic_point_blue" />

                        <!-- line -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/px_1"
                            android:layout_weight="2"
                            android:background="@color/qmui_config_color_gray_7" />

                        <!-- point -->
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/ic_point_gray" />

                        <!-- line -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/px_1"
                            android:layout_weight="1"
                            android:background="@color/qmui_config_color_gray_7" />

                    </LinearLayout>

                    <!-- 验证码 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="48dp"
                            android:gravity="center"
                            android:src="@mipmap/ic_security" />

                        <EditText
                            android:id="@+id/verification_code_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="56dp"
                            android:background="@drawable/qmui_divider_bottom_bitmap"
                            android:gravity="center"
                            android:hint="请输入收到的验证码"
                            android:inputType="number"
                            android:maxLength="6"
                            android:paddingBottom="6dp"
                            android:singleLine="true"
                            android:textColor="@color/qmui_config_color_gray_5"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- display the register button-->
                    <Button
                        android:id="@+id/next_step_button"
                        style="@style/AppQDRadiusButton"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/spece_left_right_button_minus_12"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/spece_left_right_button_minus_12"
                        android:text="下一步" />
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout>
    </FrameLayout>

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>