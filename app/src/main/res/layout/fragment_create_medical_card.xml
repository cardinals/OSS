<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_login_init2">

        <com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout
            android:id="@+id/pull_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/app_black_overlay_normal2"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_120">

                    <LinearLayout
                        android:id="@+id/medical_card_owner_name_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:paddingLeft="?attr/qmui_content_padding_horizontal"
                        android:paddingRight="?attr/qmui_content_padding_horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_32"
                            android:layout_height="@dimen/dp_32"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_patient_white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:minHeight="?android:attr/listPreferredItemHeightSmall"
                            android:paddingLeft="@dimen/dp_8"
                            android:text="姓名"
                            android:textAppearance="?android:attr/textAppearanceListItemSmall"
                            android:textColor="@color/qmui_config_color_white" />

                        <TextView
                            android:id="@+id/medical_card_owner_name_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:minHeight="?android:attr/listPreferredItemHeightSmall"
                            android:paddingRight="@dimen/dp_8"
                            android:text="请输入姓名"
                            android:textAppearance="?android:attr/textAppearanceListItemSmall"
                            android:textColor="@color/qmui_config_color_white" />

                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrow_right_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/medical_card_owner_idcard_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:paddingLeft="?attr/qmui_content_padding_horizontal"
                        android:paddingRight="?attr/qmui_content_padding_horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_32"
                            android:layout_height="@dimen/dp_32"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_card_white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:minHeight="?android:attr/listPreferredItemHeightSmall"
                            android:paddingLeft="@dimen/dp_8"
                            android:text="身份证号"
                            android:textAppearance="?android:attr/textAppearanceListItemSmall"
                            android:textColor="@color/qmui_config_color_white" />

                        <TextView
                            android:id="@+id/medical_card_owner_idcard_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:minHeight="?android:attr/listPreferredItemHeightSmall"
                            android:paddingRight="@dimen/dp_8"
                            android:text="请输入身份证号"
                            android:textAppearance="?android:attr/textAppearanceListItemSmall"
                            android:textColor="@color/qmui_config_color_white" />

                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrow_right_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/medical_card_owner_sex_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:paddingLeft="?attr/qmui_content_padding_horizontal"
                        android:paddingRight="?attr/qmui_content_padding_horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_32"
                            android:layout_height="@dimen/dp_32"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_sex_white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:minHeight="?android:attr/listPreferredItemHeightSmall"
                            android:paddingLeft="@dimen/dp_8"
                            android:text="性别"
                            android:textAppearance="?android:attr/textAppearanceListItemSmall"
                            android:textColor="@color/qmui_config_color_white" />

                        <TextView
                            android:id="@+id/medical_card_owner_sex_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:minHeight="?android:attr/listPreferredItemHeightSmall"
                            android:paddingRight="@dimen/dp_8"
                            android:text="请选择性别"
                            android:textAppearance="?android:attr/textAppearanceListItemSmall"
                            android:textColor="@color/qmui_config_color_white" />

                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrow_right_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/medical_card_password_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:paddingLeft="?attr/qmui_content_padding_horizontal"
                        android:paddingRight="?attr/qmui_content_padding_horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_32"
                            android:layout_height="@dimen/dp_32"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_security_white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:minHeight="?android:attr/listPreferredItemHeightSmall"
                            android:paddingLeft="@dimen/dp_8"
                            android:text="诊疗卡密码"
                            android:textAppearance="?android:attr/textAppearanceListItemSmall"
                            android:textColor="@color/qmui_config_color_white" />

                        <TextView
                            android:id="@+id/medical_card_password_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:minHeight="?android:attr/listPreferredItemHeightSmall"
                            android:paddingRight="@dimen/dp_8"
                            android:text="请输入管理密码"
                            android:textColorHint="@color/qmui_config_color_white"
                            android:textAppearance="?android:attr/textAppearanceListItemSmall"
                            android:textColor="@color/qmui_config_color_white" />

                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrow_right_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/medical_card_owner_address_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:paddingLeft="?attr/qmui_content_padding_horizontal"
                        android:paddingRight="?attr/qmui_content_padding_horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_32"
                            android:layout_height="@dimen/dp_32"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_location_white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:minHeight="?android:attr/listPreferredItemHeightSmall"
                            android:paddingLeft="@dimen/dp_8"
                            android:text="联系地址"
                            android:textAppearance="?android:attr/textAppearanceListItemSmall"
                            android:textColor="@color/qmui_config_color_white" />

                        <TextView
                            android:id="@+id/medical_card_owner_address_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:minHeight="?android:attr/listPreferredItemHeightSmall"
                            android:paddingRight="@dimen/dp_8"
                            android:text="请输入有效联系地址"
                            android:textAppearance="?android:attr/textAppearanceListItemSmall"
                            android:textColor="@color/qmui_config_color_white" />

                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrow_right_small" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/confirm_info_button"
                        style="@style/AppTransparentQDRadiusButton"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/space_left_right_button_minus_12"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/space_left_right_button_minus_12"
                        android:text="确认办理" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/copyright_textview"
                        style="@style/AppTransparentCopyrightTextViw" />
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout>
    </FrameLayout>

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>