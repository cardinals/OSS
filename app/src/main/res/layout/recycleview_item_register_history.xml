<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.layout.QMUILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_record_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="14dp"
    android:background="?attr/qmui_s_list_item_bg_with_border_none"
    android:gravity="center"
    android:orientation="vertical"
    app:qmui_outerNormalColor="?attr/qmui_config_color_background"
    app:qmui_showBorderOnlyBeforeL="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:orientation="horizontal">

        <TextView
            style="@style/QDCommonTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:text="挂号单详情" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="详情"
            android:textColor="?attr/qmui_config_color_gray_5"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_arrow_right" />

    </LinearLayout>

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/qmui_divider_top_bitmap" />

    <!-- 订单详情 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_8"
        android:orientation="vertical">

        <!-- 挂号单单号 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="挂号单号:"
                android:textColor="?attr/qmui_config_color_gray_5"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/register_id_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="挂号单号"
                android:textColor="?attr/qmui_config_color_gray_5"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- 支付状态 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付状态:"
                android:textColor="?attr/qmui_config_color_gray_5"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/pay_state_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="支付状态"
                android:textColor="?attr/qmui_config_color_gray_5"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- 就诊序号 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="就诊序号:"
                android:textColor="?attr/qmui_config_color_gray_5"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/diagnosis_no_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="擅长"
                android:textColor="?attr/qmui_config_color_gray_5"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- 金额 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约挂号费:"
                android:textColor="?attr/qmui_config_color_gray_5"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/speciality_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="费用"
                android:textColor="?attr/app_primary_color"
                android:textSize="13sp" />

            <view
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_16"
                android:text="2018-11-10 10:10:10"
                android:textColor="?attr/qmui_config_color_gray_5"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</com.qmuiteam.qmui.layout.QMUILinearLayout>
